<html>
  <head>
    <title>Palindrome Checker</title>
  </head>
  <body>
    <h1>Check Palindrome</h1>
    <form method="POST">
      <input type="number" name="num" placeholder="Enter number" required>
      <input type="submit" value="Check">
    </form>

    <?php
    if ($_POST) {
        $num = $_POST['num'];
        echo $num == strrev($num) ? "$num is a palindrome." : "$num is not a palindrome.";
    }
    ?>
  </body>
</html>
